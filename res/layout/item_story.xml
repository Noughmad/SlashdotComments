<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/story_item_background"
    >

    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:textStyle="bold"
        android:textColor="@color/story_item_text_color" />

    <TextView
        android:id="@+id/story_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story_title"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/story_item_text_color_secondary" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/story_item_background" >
    
    
    <ImageView
        android:id="@+id/story_indicator_arrow"
        android:layout_width="12dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/list_activated_indicator_arrow" />
    

    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/story_indicator_arrow"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="0dp"
        android:textStyle="bold"
        android:textColor="@color/story_item_text_color" />

    <TextView
        android:id="@+id/story_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story_title"
        android:layout_toLeftOf="@+id/story_indicator_arrow"
        android:paddingBottom="8dp"
        android:paddingRight="0dp"
        android:textColor="@color/story_item_text_color_secondary" />
    
</RelativeLayout>